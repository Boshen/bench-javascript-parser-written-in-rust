{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Boshen/renovate"],
  "schedule": ["at any time"],
  "automergeType": "pr",
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "oxc",
      "matchPackagePatterns": ["oxc"]
    },
    {
      "groupName": "swc",
      "matchPackagePatterns": ["swc"]
    },
    {
      "groupName": "biome",
      "matchPackagePatterns": ["biome"]
    }
  ]
}
